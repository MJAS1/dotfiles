# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
elif [ -f /etc/bash.bashrc ]; then
    . /etc/bash.bashrc
fi

# Aliases
if [ -f ~/.aliases ]; then
    . ~/.aliases
fi

# Pass ctrl-s through applications
stty -ixon

shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=5000
HISTFILESIZE=10000

PS1="[\[\e[32m\]\u\[\e[m\]\[\e[32m\]@\[\e[m\]\[\e[32m\]\h\[\e[m\]\[\e[37m\]:\[\e[m\]\[\e[31m\]\w\[\e[m\]] \[\e[37m\]>\[\e[m\] "

export VAGRANT_DEFAULT_PROVIDER=virtualbox
